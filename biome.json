{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "lf"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"all": true
			},
			"nursery": {
				"useSortedClasses": "warn"
			},
			"suspicious": {
				"all": true
			},
			"performance": {
				"all": true
			},
			"correctness": {
				"all": true,
				"useImportExtensions": "off"
			},
			"a11y": {
				"all": true
			},
			"security": {
				"all": true
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
